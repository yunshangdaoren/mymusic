<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去掉Activity的ActionBar的样式-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--toolbar样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--toolbar样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--toolbar样式-->
    <style name="theme_toolbar_white" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    
    <!--版权样式-->
    <style name="CopyrightText">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/copyright</item>
    </style>
    
    <!-- 登录和注册界面的EditText样式 -->
    <style name="EditText">
        <item name="android:drawablePadding">@dimen/button_padding</item>
        <item name="android:drawableLeft">@drawable/ic_phone</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 侧滑的设置界面Item样式 -->
    <style name="ItemContainer">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- Item图标样式 -->
    <style name="ItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Item文字样式 -->
    <style name="ItemText">
        <item name="android:layout_marginLeft">@dimen/item_icon_padding</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemTextHint">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="ItemContainerLarge">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--暂时一样，所以直接继承-->
    <style name="ItemIconLarge" parent="ItemIcon">
    </style>

    <style name="ItemTextLarge">
        <item name="android:layout_marginLeft">@dimen/item_icon_padding</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--tabLayout样式-->
    <style name="TabLayout">
        <!--<item name="tabSelectedTextColor">@color/white</item>-->
        <!--<item name="tabTextColor">@color/text_white</item>-->
        <!--<item name="tabMode">fixed</item>-->
        <!--<item name="tabIndicatorColor">@color/white</item>-->
    </style>

    <!-- 音乐播放页面的SeekBar -->
    <style name="MusicSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/music_seek_bar_height</item>
        <item name="android:minHeight">@dimen/music_seek_bar_height</item>
    </style>



</resources>
