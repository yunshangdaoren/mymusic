<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 歌曲名称模块 -->
    <LinearLayout
        style="@style/ItemEntryContainer">

        <TextView
            android:id="@+id/tv_song_more_title"
            style="@style/ItemEntryTitle"
            android:text="@string/song_detail"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 下一首播放模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_next_play"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="@string/next_play"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 收藏到歌单模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_collection"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="@string/collection_to_list"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 下载模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_download"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="@string/download"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 评论模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_comment"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            android:id="@+id/tv_song_more_comment_count"
            style="@style/ItemEntryTitle"
            android:text="@string/comment_count"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 下载模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_share"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="@string/share"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 歌手模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_artist"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            android:id="@+id/tv_song_more_artist"
            style="@style/ItemEntryTitle"
            android:maxLines="1"
            android:text="@string/artist"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 专辑模块 -->
    <LinearLayout
        android:id="@+id/ll_song_more_album"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            android:id="@+id/tv_song_more_album"
            style="@style/ItemEntryTitle"
            android:text="@string/album"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <!-- 删除歌曲模块 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_song_more_delete"
        style="@style/ItemEntryContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="@string/delete"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

</LinearLayout>
