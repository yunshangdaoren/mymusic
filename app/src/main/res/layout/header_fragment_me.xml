<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_local_music"
        style="@style/ItemEntryContainer"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_me_music"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="本地音乐"/>

        <TextView
            android:id="@+id/tv_music_count"
            style="@style/ItemEntryCount"
            android:text="@string/music_count"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <LinearLayout
        android:id="@+id/ll_recent_play"
        style="@style/ItemEntryContainer"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_me_play"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="最近播放"/>

        <TextView
            style="@style/ItemEntryCount"
            android:text=" (0) "/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <LinearLayout
        style="@style/ItemEntryContainer"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_me_download"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="下载管理"/>

        <TextView
            android:id="@+id/tv_download_count"
            style="@style/ItemEntryCount"
            android:text=" (0) "/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <LinearLayout
        style="@style/ItemEntryContainer"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_me_radio"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="我的电台"/>

        <TextView
            style="@style/ItemEntryCount"
            android:text=" (0) "/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

    <LinearLayout
        style="@style/ItemEntryContainer"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_me_collection"/>

        <TextView
            style="@style/ItemEntryTitle"
            android:text="我的收藏"/>

        <TextView
            style="@style/ItemEntryCount"
            android:text=" (0) "/>
    </LinearLayout>


</LinearLayout>