<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/activity_margin"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 歌曲在歌单中对应的序号 -->
        <TextView
            android:id="@+id/tv_item_song_list_position"
            android:layout_width="@dimen/item_song_height"
            android:layout_height="@dimen/item_song_height"
            android:gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/button_padding"
            android:orientation="vertical">

            <!-- 歌曲名称 -->
            <TextView
                android:id="@+id/tv_item_song_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text"
                tools:text="歌曲名称"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_icon_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 歌曲是否下载图标 -->
                <ImageView
                    android:id="@+id/iv_item_song_list_downloaded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_song_downloaded"
                    android:visibility="gone"/>

                <!-- 歌曲的专辑名称 -->
                <TextView
                    android:id="@+id/tv_item_song_list_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_grey"
                    tools:text="周杰伦-我的地盘我做主"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 歌曲视频播放图标 -->
        <ImageView
            android:layout_width="@dimen/item_song_height"
            android:layout_height="@dimen/item_song_height"
            android:src="@drawable/ic_music_play_all"
            android:visibility="gone"/>

        <!-- 歌曲更多操作图标 -->
        <ImageView
            android:id="@+id/iv_item_song_list_more"
            android:layout_width="@dimen/item_song_height"
            android:layout_height="@dimen/item_song_height"
            android:src="@drawable/ic_more_grey"/>
    </LinearLayout>

    <include layout="@layout/divider_small"/>

</LinearLayout>